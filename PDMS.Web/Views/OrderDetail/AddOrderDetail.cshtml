@{
    ViewData["Title"] = "Home Page";
}

<div class="col-xl">
    <div class="card mb-4 w-75 ">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add a new Order Detail</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Product</label>
                    <input type="text" class="form-control" id="basic-default-fullname" placeholder="Egg fire rice" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Price</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="9900" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Total</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="90000" />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Add Order Detail</button>
            </form>
        </div>
    </div>
</div>
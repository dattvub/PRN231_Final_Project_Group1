@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    ViewData["Protected"] = true;
}

@section Heads {
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/product/product.css" />
}
<div class="col-sm-auto mb-3 mt-2">
    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Back to list</a>
</div>
<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6 mb-4 mb-lg-0" >
                <div class="product-slider " id="galleryTop">
                    <div class="swiper-container theme-slider position-lg-absolute all-0 " id="swiper-container" style="overflow-x: hidden">
                        <div class="swiper-wrapper h-100" id="img-slide">
                        </div>
                        <div class="swiper-nav">
                            <div class="swiper-button-next swiper-button-white"></div>
                            <div class="swiper-button-prev swiper-button-white"></div>
                        </div>
                    </div>
                </div>
                <div thumbsSlider="" class="swiper galleryThumbs mt-1">
                    <div class="swiper-wrapper" id="galleryThumbs">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <h5 id="productName" class="mb-1"></h5>
                <div class="container-code-brand d-flex w-40 align-items-center">
                    <div class="product-code" id="product-code">P24602</div><div>&#160</div>&#9679<div>&#8196</div><span class="h-1 w-1 rounded-full bg-neutral-600"></span><a class="fs-0 d-block" id="brandName" href="#!">Thuốc và giảm đau</a>
                </div>
                <h4 class="mt-3 d-flex align-items-center">
                    <span class="text-warning me-2" id="price">$1200</span><span class="me-1 fs--1 text-500">
                    </span>
                </h4>
                <p class="fs--1">
                    <table>
                        <tbody>
                            <tr>
                                <td class=" fw-bold">Ngành hàng</td>
                                <td>&#8195&#8194</td>
                                <td id="major-thing">$100</td>
                            </tr>
                            <tr>
                                <td class=" fw-bold">Nhà cung cấp</td>
                                <td>&#8195&#8194</td>
                                <td id ="supplier-thing">$80</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="mw-75">
                        <svg class="mw-100 barcodeImg" id="barcodeImg"></svg>
                    </div>
                </p>

                <p class="fs--1">Stock: <strong class="text-success" id="stock">Available</strong></p>
                <div class="row">
                    <div class="col-auto pe-0">
                        <div class="input-group input-group-sm" data-quantity="data-quantity">
                            <button class="btn btn-sm btn-outline-secondary border-300" data-field="input-quantity" data-type="minus">-</button>
                            <input class="form-control text-center input-quantity input-spin-none" id="stock-can-add" type="number" min="0" value="0" max="4" aria-label="Amount (to the nearest dollar)" style="max-width: 50px" />
                            <button class="btn btn-sm btn-outline-secondary border-300" data-field="input-quantity" data-type="plus">+</button>
                        </div>
                    </div>
                    <div class="col-auto px-2 px-md-3"><button class="btn btn-sm btn-primary" type="button"><span class="iconify-inline fs--2" data-icon="mdi:cart"></span><span class="d-none d-sm-inline-block">Add to cart</span></button></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="overflow-hidden mt-4">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item"><a class="nav-link active ps-0" id="description-tab" data-bs-toggle="tab" href="#tab-description" role="tab" aria-controls="tab-description" aria-selected="true">Description</a></li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="tab-description" role="tabpanel" aria-labelledby="description-tab">
                            <div class="mt-3">
                                <p id="description">
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/product/product-detail.js"></script>
}
@section ScriptBefore {
    <script src="~/lib/jsbarcode/JsBarcode.all.min.js"></script>
}